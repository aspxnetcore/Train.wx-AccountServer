@model IEnumerable<JULONG.TRAIN.Model.Vote>

@{
    ViewBag.Title = "Index";

	ViewBag.menu1 = "调查投票";
	ViewBag.menu11 = "列表";

}



<p>
    @Html.ActionLink("新建", "Edit")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Exp)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Count)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsDisabled)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Exp)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Count)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsDisabled)
        </td>
        <td>
			<button type="button" class="btn purple btn-xs" onclick="toTop(@item.Id)">
				<i class="fa fa-long-arrow-up"></i>
			</button> 

			<a href="vote/Delete/@(item.Id)" class="btn red btn-xs">
				<i class="fa fa-remove"></i>
			</a>
			<a href="vote/edit/@(item.Id)" class="btn btn-xs btn-success">
				<i class="fa fa-edit"></i>
			</a>
			<a href="vote/Details/@(item.Id)" class="btn btn-xs">
				<i class="fa fa-openid"></i>
			</a>

        </td>
    </tr>
}

</table>
<script>
			function toTop(id) {
				myAjaxPost("/manage/vote/totop", { id: id }, function () {
					self.location.reload();
				})
			}
</script>