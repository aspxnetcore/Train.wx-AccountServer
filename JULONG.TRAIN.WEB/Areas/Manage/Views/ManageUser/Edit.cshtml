@using JULONG.TRAIN.Model;
@model ManageUser
@using JULONG.TRAIN.WEB.Areas.Manage.Models;
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>编辑用户</h4>
        <hr />
        @Html.ValidationSummary()
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
				@if (Model.Id != 0) { 
				@Html.DisplayFor(model => model.Name)
	}
	else
	{
						@Html.EditorFor(model => model.Name)
	}
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IsSuper, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
				@if (!AccountUser.IsSuper)
	{ 
				@Html.DisplayFor(model => model.IsSuper)
	}
	else 
	{
		@Html.EditorFor(model => model.IsSuper)
	}
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Password, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.PasswordFor(model => model.Password)
                @Html.ValidationMessageFor(model => model.Password)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ConfirmPassword, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.PasswordFor(model => model.ConfirmPassword)
                @Html.ValidationMessageFor(model => model.ConfirmPassword)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Description, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Description)
                @Html.ValidationMessageFor(model => model.Description)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Bak, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Bak)
                @Html.ValidationMessageFor(model => model.Bak)
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.IsDisabled, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.IsDisabled, "ace_boolean_checkbox")
                @Html.ValidationMessageFor(model => model.IsDisabled)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit"  class="btn btn-primary btn-sm tooltip-warning">
                    <i class="icon-save"></i>
                    保存
                </button>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
