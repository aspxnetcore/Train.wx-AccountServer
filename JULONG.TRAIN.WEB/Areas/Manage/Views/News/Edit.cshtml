@using JULONG.TRAIN.Model;
@model News

@{
    ViewBag.Title = "Edit";
	ViewBag.menu1 = "通知公告";
	ViewBag.menu11 =  Model.Id==0?"新建":Model.Title;
}


	@using (Html.BeginForm())
	{
		@Html.AntiForgeryToken()

		<div class="form-horizontal">

			@Html.ValidationSummary(true, "", new { @class = "text-danger" })
			@Html.HiddenFor(model => model.Id)
			<div class="form-group">
				@Html.LabelFor(model => model.NewsType, htmlAttributes: new { @class = "control-label col-md-2" })
				<div class="col-md-10">
					@Html.EditorFor(model => model.NewsType,"select_enum")
					
				</div>
			</div>
			<div class="form-group">
				@Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
				<div class="col-md-10">
					@Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
					@Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
				</div>
			</div>

			<div class="form-group">
				@Html.LabelFor(model => model.Content, htmlAttributes: new { @class = "control-label col-md-2" })
				<div class="col-md-10">
					@Html.EditorFor(d => d.Content, "ace_TextArea")
					@Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
				</div>
			</div>

			<div class="form-group">
				@Html.LabelFor(model => model.IsDisabled, htmlAttributes: new { @class = "control-label col-md-2" })
				<div class="col-md-10 control-label">
					<div class="checkbox">
						@Html.EditorFor(model => model.IsDisabled, "checkbox")

					</div>
				</div>
			</div>

			<div class="form-group">
				<div class="col-md-offset-2 col-md-10">
					<input type="submit" value="Save" class="btn btn-default" />
				</div>
			</div>
		</div>
	}

	<div>
		@Html.ActionLink("返回", "Index")
	</div>
	@section footer{

	}
