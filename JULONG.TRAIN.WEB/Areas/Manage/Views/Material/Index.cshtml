@using JULONG.TRAIN.Model;
@model IEnumerable<Material>

@{
    ViewBag.Title = "Index";
	ViewBag.menu1 = "培训";
	ViewBag.menu11 = "教材管理";

}



<p>
    @Html.ActionLink("新建", "Edit")
</p>
<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
		<th>
			@Html.DisplayNameFor(model => model.CreateDateTime)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.LastDateTime)
		</th>

		<td>
			作废
		</td>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>

        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
		<td>
			@Html.DisplayFor(modelItem => item.CreateDateTime)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.LastDateTime)
		</td>

		<td>
			<i class="fa fa-@(!item.IsDisabled ? "error" : "check green") fa-1x"></i>
		</td>
        <td>
			<button type="button" class="btn purple btn-xs" onclick="toTop(@item.Id)">
				<i class="fa fa-long-arrow-up"></i>
			</button>
			<a href="material/edit/@(item.Id)" class="btn btn-xs green">
				<i class="fa fa-edit"></i>
			</a>
			<a href="material/Del/@(item.Id)" class="btn red btn-xs">
				<i class="fa fa-remove"></i>
			</a>
			<a href="material/Detail/@(item.Id)" class="btn btn-xs">
				<i class="fa fa-openid"></i>
			</a>

        </td>
    </tr>
}

</table>
<script>
		function toTop(id) {
			myAjaxPost("/manage/material/totop", { id: id }, function () {
				self.location.reload();
			})
		}
</script>